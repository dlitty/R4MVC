    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.1.1" PrivateAssets="All" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.9.0" PrivateAssets="All" />
  </ItemGroup>

